{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"files": {
		"ignoreUnknown": true,
		"includes": [
			"apps/**/*.{json,md,toml,ts,tsx,yaml,yml,astro}",
			"packages/**/*.{json,md,toml,ts,tsx,yaml,yml}",
			".github/**/*.{json,md,toml,yaml,yml}",
			"!apps/checkout/.react-router/**/*",
			"!apps/dashboard/.react-router/**/*",
			"!apps/www/.astro/**/*",
			"!packages/api/src/contracts/**/*",
			"!packages/ui/src/components/ap-icons/*"
		]
	},
	"vcs": {
		"useIgnoreFile": true
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"complexity": {
				"noBannedTypes": "off"
			},
			"correctness": {
				"noEmptyPattern": "off",
				"noUnusedFunctionParameters": "off",
				"noUnusedVariables": "off",
				"useUniqueElementIds": "off"
			},
			"suspicious": {
				"noExplicitAny": "off"
			}
		}
	}
}
